@using Web.Models.Account
@using Microsoft.IdentityModel.Tokens
@model Web.Models.View.User._HeaderView

<header>
    <div class="navbar bg-base-100">
        <div class="flex-1">
            <a class="btn btn-ghost text-xl" href="@Url.ActionLink("Dashboard", "Admin", new {area = "Admin"})">Pater</a>
        </div>
        <div class="flex-none">
            <div class="dropdown dropdown-end">
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                    <div class="w-10 rounded-full">
                        <img alt="User Avatar" src="~/UserPics/@(Model.picPath.IsNullOrEmpty() ? "default-avatar.svg" : Model.picPath)" />
                    </div>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                    <li>
                        <a href="@Url.ActionLink("Dashboard", "User", new {area = "User"})">
                            User Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="@Url.ActionLink("Logout", "User", new {area = "User"})">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>