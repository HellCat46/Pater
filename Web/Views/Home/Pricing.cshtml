@{
    ViewData["Title"] = "Pricing | Pater";
}
<div class="min-h-screen px-8 py-20 bg-base-200">
<div class="hero">
    <div class="hero-content text-center">
        <div >
            <div class="flex flex-col justify-center item-center">
                <h2 class="text-2xl font-bold sm:text-3xl">Our Flexible Pricing Plans: Tailored for Your Needs</h2>
                <p class="py-6">At Pater, we believe in providing transparent and flexible pricing options that cater to the diverse needs of our users. Choose from our range of plans designed to accommodate everyone, from individuals to businesses seeking robust link management solutions.</p>
            </div>
        </div>
    </div>
</div>

