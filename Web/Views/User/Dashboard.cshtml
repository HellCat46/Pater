@using Web.Models.View.User
@using Web.Models.Link
@model DashboardView
@{
    ViewData["Title"] = "Dashboard | Pater";
    Layout = "_UserLayout";
}
@Html.Partial("_Header", new _HeaderView()
{
    isAdmin = Model.UserIsAdmin,
    name = Model.UserName,
    picPath = Model.UserPicPath,
    plan = Model.UserPlan
})

<div class="my-10">
    <div class="card w-auto mx-10 bg-base-200 shadow-xl  ">
        <div class="card-body">
            <div class="card-title">
                <h2>Links</h2>
                <div class="grow"></div>
                <button class="btn btn-primary" onclick="create.showModal()">Create</button>
            </div>
            <div class="flex items-center justify-center mx-3">
                @if (Model.links.Count == 0)
                {
                    <span class="p-2">Nothing to show here</span>
                }
                else
                {
                    <div>
                        <table class="table table-sm lg:table-lg ">
                            <thead>
                            <tr>
                                <th>
                                    <label>
                                        <input type="checkbox" class="checkbox"/>
                                    </label>
                                </th>
                                <th></th>
                                <th class="hidden lg:table-cell"></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (LinkModel link in Model.links)
                            {
                                <tr>
                                    <th>
                                        <label>
                                            <input type="checkbox" class="checkbox"/>
                                        </label>
                                    </th>
                                    <td>
                                        <div class="flex items-center gap-3">
                                            <div class="avatar">
                                                <div class="mask mask-squircle w-12 h-12">
                                                    <img src="https://t2.gstatic.com/faviconV2?client=SOCIAL&type=FAVICON&fallback_opts=TYPE,SIZE,URL&url=@(link.url)&size=48" alt="Favicon"/>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="font-bold">@link.name</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="hidden lg:table-cell">@link.CreatedAt</td>
                                    <th>
                                        <div class="dropdown dropdown-end">
                                            <label tabindex="0" class="btn btn-ghost lg:hidden">
                                                <svg class="h-5 w-5" src="~/assets/svg/three-dots-icon.svg" alt="Options"/>
                                            </label>
                                            <ul
                                                tabindex="0"
                                                class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-300 rounded-box w-52"
                                            >
                                                <li><button>Copy Link</button></li>
                                                <li><button>Edit</button></li>
                                                <li><button>Delete</button></li>
                                            </ul>
                                        </div>
                                        <div class="hidden lg:flex">
                                            <ul class="menu menu-horizontal px-1">
                                                <li><img  src="~/assets/svg/copy-icon.svg"/></li>
                                                <li><img  src="~/assets/svg/edit-icon.svg"/></li>
                                                <li><img  src="~/assets/svg/delete-icon.svg"/></li>
                                            </ul>
                                        </div>
                                    </th>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@* Modals *@
<dialog id="create" class="modal modal-bottom sm:modal-middle">
    <div class="modal-box card">
        <form class="card-body" method="post" asp-action="CreateLink">
            <h2 class="card-title">Shorten a Link</h2>

            <div class="form-control mt-2">
                <input type="text" placeholder="Long Link" class="input input-bordered" asp-for="NewLinkURL" required/>
                <span asp-validation-for="NewLinkURL">Link sucks</span>
            </div>

            <div class="form-control mt-2">
                <input type="text" placeholder="Name" class="input input-bordered" asp-for="NewLinkName"/>
            </div>

            <div class="form-control mt-2">
                <input type="text" placeholder="Custom Code" class="input input-bordered" asp-for="NewLinkCode"/>
            </div>

            <div class="form-control mt-6">
                <button class="btn btn-primary">Create</button>
            </div>
        </form>

        <div class="modal-action">
            <form method="dialog">
                <button class="btn">Close</button>
            </form>
        </div>
    </div>
</dialog>